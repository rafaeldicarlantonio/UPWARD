# Copy to .env and fill in real values.
# Do not commit secrets.

# Core API Keys
OPENAI_API_KEY=your-openai-api-key-here
SUPABASE_URL=your-supabase-url-here
PINECONE_API_KEY=your-pinecone-api-key-here

# Pinecone Indices
PINECONE_INDEX=your-main-index-name
PINECONE_EXPLICATE_INDEX=your-explicate-index-name
PINECONE_IMPLICATE_INDEX=your-implicate-index-name

# JWT / Auth
JWT_SECRET=change-me
JWT_ALGO=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Roles
ROLE_DEFAULT=general

# AURA (optional)
AURA_API_BASE=https://api.aura.example
AURA_API_KEY=example-key

# Database (required for migrations)
DATABASE_URL=postgresql://postgres:password@host:5432/postgres

# Optional Configuration
EMBED_MODEL=text-embedding-3-small
MEMORIES_TEXT_COLUMN=text
EMBED_DIM=
X_API_KEY=
MAX_CONTEXT_TOKENS=2000
TOPK_PER_TYPE=30
RECENCY_HALFLIFE_DAYS=90
RECENCY_FLOOR=0.35